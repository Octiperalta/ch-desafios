<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <div class="flex justify-between">
      <div class="flex gap-2 items-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900">Bienvenido {{user.username}}! </h2>
        <span class="block text-md font-semibold text-slate-400">({{user.userRole}})</span>
      </div>
      <div>
      <form action="/logout" method="POST" class="block h-full flex items-center">
        <button class=" block bg-red-700 hover:bg-red-800 text-white text-sm font-semibold px-4 py-1.5 rounded-lg border">Salir</button>
      </form>
      </div>
    </div>

    <div class="mt-6 grid grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
      {{#each productos}}
      <div class="group relative">
        <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
          <img src="https://storage.googleapis.com/proudcity/mebanenc/uploads/2021/03/placeholder-image.png" alt="Front of men&#039;s Basic Tee in black." class="h-full w-full object-cover object-center lg:h-full lg:w-full">
        </div>
        <div class="mt-2 flex justify-between">
          <div class="flex flex-col">
            <h3 class="text-sm text-gray-700">
                <span aria-hidden="true" class="absolute inset-0"></span>
                {{this.title}} 
            </h3>
            <p class="text-sm text-gray-500 leading-4">{{this.description}}</p>
          </div>
          <p class="text-sm font-medium text-gray-900">${{this.price}}</p>
        </div>
      </div>
      {{/each }}

    </div>
  </div>